{
  "name": "concourse-pipeline-builder",
  "version": "1.0.0",
  "description": "Typings, utilities and opinionated defaults that allow to define Concourse pipelines using TypeScript",
  "repository": "https://github.com/iliascholl/concourse-pipeline-builder",
  "author": "Ilia Scholl",
  "license": "MIT",
  "main": "./lib/index.js",
  "files": [
    "./lib",
    "./bin"
  ],
  "bin": {
    "build-pipeline": "./bin/build-pipeline.js"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/**/* --fix",
    "test": "jest",
    "clean": "rm -rf ./lib"
  },
  "husky": {
    "hooks": {
      "pre-commit": "jest && lint-staged"
    }
  },
  "lint-staged": {
    "*.(js|ts)": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "lodash": "^4.17.0",
    "ts-node": "^8.5.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "@types/lodash": "^4.14.148",
    "@types/node": "^12.12.0",
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "@typescript-eslint/parser": "^2.6.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.0",
    "prettier": "^1.18.0",
    "ts-jest": "^24.1.0",
    "typescript": "^3.7.0"
  }
}
